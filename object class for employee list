package com.sumit; 
  
import org.springframework 
    .stereotype 
    .Repository; 
  

import com.sumit.Employees; 
  

  
public class EmployeeDAO { 
  
    private static Employees list 
        = new Employees(); 
  
   
    static
    { 
  
      
        list.getEmployeeList().add( 
            new Employee( 
                1, 
                "Sumit", 
                "Pawar", 
                "pawarsumit456@gmail.com")); 
  
        list.getEmployeeList().add( 
            new Employee( 
                2, "Vikas", 
                "Patil", 
                "abc@gmail.com")); 
  
        list.getEmployeeList().add( 
            new Employee( 
                3, "Rakesh", 
                "Kumar", 
                "asdf@gmail.com")); 
  
            
    } 
  
   
    public Employees getAllEmployees() 
    { 
  
        return list; 
    } 
  
        
       
        public void
        addEmployee(Employee employee) 
    { 
        list.getEmployeeList() 
            .add(employee); 
            
    } 
} 
